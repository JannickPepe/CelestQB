generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["tracing"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guide {
  id       Int        @id @default(autoincrement())
  title    String
  text     String
  date     DateTime
  image    String?
  comments Comment[]
}

model Tip {
  id       Int        @id @default(autoincrement())
  title    String
  text     String
  date     DateTime
  image    String?
  comments Comment[]
}

model Comment {
  id       Int       @id @default(autoincrement())
  content  String
  createdAt DateTime @default(now())
  userName String
  guide    Guide?    @relation(fields: [guideId], references: [id])
  guideId  Int?
  tip      Tip?      @relation(fields: [tipId], references: [id])
  tipId    Int?
}